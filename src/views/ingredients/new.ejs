<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Ingredient</h1>

      <form action="/ingredients/new" method="post">
        <div class="form-group">
          <label for="name">Ingredient name</label>
          <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Ingredient Name">
        </div>
        <div class="form-group">
          <label for="source">Source</label>
          <textarea rows="4" class="form-control" name="source" placeholder="Enter Source"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>